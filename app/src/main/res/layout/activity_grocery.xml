<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LinearLayout.Grocery"
    android:background="#F5F9FC">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/banner"
        android:scaleType="centerCrop"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="61dp"
                    android:background="#EFF7F5"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    app:cardElevation="10dp"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/vegetable"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vegetarian"
                        android:textColor="#28AE61"
                        android:textSize="8sp"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="5dp"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="61dp"
                    android:background="#EFF7F5"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    app:cardElevation="10dp"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/fruits"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Best Seller"
                        android:textColor="#28AE61"
                        android:textSize="8sp"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="25dp"
                        android:layout_marginBottom="5dp"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="61dp"
                    android:background="#EFF7F5"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    app:cardElevation="10dp"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/bowl"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Herbs"
                        android:textColor="#28AE61"
                        android:textSize="8sp"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="25dp"
                        android:layout_marginBottom="5dp"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="61dp"
                    android:background="#EFF7F5"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    app:cardElevation="10dp"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/beverages"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beverages"
                        android:textColor="#28AE61"
                        android:textSize="8sp"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="5dp"/>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="61dp"
                    android:background="#EFF7F5"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    app:cardElevation="10dp"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/promo"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Promo"
                        android:textColor="#28AE61"
                        android:textSize="8sp"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="25dp"
                        android:layout_marginBottom="5dp"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="61dp"
                    android:background="#EFF7F5"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    app:cardElevation="10dp"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/best_seller"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fruits"
                        android:textColor="#28AE61"
                        android:textSize="8sp"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="25dp"
                        android:layout_marginBottom="5dp"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="61dp"
                    android:background="#EFF7F5"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    app:cardElevation="10dp"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/seafood"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Protein"
                        android:textColor="#28AE61"
                        android:textSize="8sp"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="25dp"
                        android:layout_marginBottom="5dp"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="61dp"
                    android:background="#EFF7F5"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    app:cardElevation="10dp"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/others"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Others"
                        android:textColor="#28AE61"
                        android:textSize="8sp"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="5dp"/>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flash Sale"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2:10:09"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:textColor="#28AE61"
            android:layout_margin="10dp"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="35dp">

        <androidx.cardview.widget.CardView
            android:layout_width="136dp"
            android:layout_height="180dp"
            android:backgroundTint="#F7F5F7"
            android:layout_weight="1"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:src="@drawable/cabbage"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cabbage"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ₹15.80 /500 gm"
                    android:layout_gravity="center"/>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="136dp"
                android:layout_height="180dp"
                android:backgroundTint="#F7F5F7"
                android:layout_weight="1"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="99dp"
                        android:src="@drawable/kale"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kale"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" ₹35.00 /250 gm"
                        android:layout_gravity="center"/>
                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>